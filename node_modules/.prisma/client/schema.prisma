// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  email             String   @unique
  phoneNumber       String?
  // Relations implemented in q1
  assignedProject   Project? @relation("Assigned Projects", fields: [assignedProjectId], references: [id])
  assignedProjectId Int?
  assignedTasks     Task[]   @relation("Assigned Tasks")
}

model Project {
  id      Int    @id @default(autoincrement())
  name    String
  // Relations implemented in q1
  members User[] @relation("Assigned Projects")
}

// Implemented in q0
model Task {
  id            Int    @id @default(autoincrement())
  name          String
  description   String
  priority      Int
  assignedUsers User[] @relation("Assigned Tasks")
}
